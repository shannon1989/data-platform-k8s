{
  "type": "record",
  "name": "IngestionState",
  "namespace": "platform.ingestion.state",
  "doc": "Ingestion progress and control state for blockchain pipelines",
  "fields": [
    {
      "name": "job_name",
      "type": "string",
      "doc": "eth_realtime_mainnet / eth_backfill_job"
    },
    {
      "name": "run_id",
      "type": "string"
    },
    {
      "name": "range",
      "type": {
        "type": "record",
        "name": "BlockRange",
        "fields": [
          { "name": "start", "type": "long" },
          { "name": "end", "type": "long" }
        ]
      }
    },
    {
      "name": "checkpoint",
      "type": "long"
    },
    {
      "name": "status",
      "type": {
        "type": "enum",
        "name": "IngestionStatus",
        "symbols": ["running", "stopped", "completed", "failed"]
      }
    },
    {
      "name": "inserted_at",
      "type": "string",
      "doc": "ISO-8601 ingestion timestamp"
    }
  ]
}
